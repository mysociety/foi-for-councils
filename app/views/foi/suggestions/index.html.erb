<% content_for :page_title, 'Links that might answer your question' %>
<% content_for :body_classes, 'foi foi-suggestions' %>

<h1 class="heading-xlarge">
  Before you continue, weâ€™ve found these links that might answer your questions
</h1>

<div class="js-foi-suggestions">
  <% @suggestions.each do |suggestion| %>
    <%= link_to suggestion.url, class: 'foi-suggestion text', target: '_blank' do %>
      <h3 class="heading-medium"><%= suggestion.title %></h3>

      <% if suggestion.summary %>
        <p class="excerpt"><%= suggestion.summary %></p>
      <% end %>
      <p><span class="link-fake">Open in a new window</span></p>
    <% end %>
  <% end %>
</div>

<hr class="text" style="margin: 2em 0;">

<p class="text">
  <strong>Not what you were looking for?</strong>
  Continue with your request.
</p>

<p class="cta-section">
  <%= link_to 'Continue with request', new_foi_request_contact_path, class: 'button' %>
</p>
